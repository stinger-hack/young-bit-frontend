{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": "src",
    "noImplicitThis": false,
    "outDir": "./dist/",
    "paths": {
      "src/*": [
        "./src/"
      ]
    },
    "composite": true,
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "./declaration.d.ts",
    "./vite.config.ts"
  ],
  "parserOptions": {
    "project": "./.eslintrc.json"
  }
}